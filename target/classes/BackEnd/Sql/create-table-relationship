CREATE TABLE PARKING_AREA (
    Id int,
    name varchar(255),
    motor_lot int,
	car_lot int,
	PRIMARY KEY (Id)
);

CREATE TABLE Ticket (
    Id varchar(6),
    ticket_type_id int NOT NULL,
	time_in Timestamp,
	time_out Timestamp,
	out_date Timestamp,
	vehicle_id varchar(255) unique,
	area_id int,
	emp_id varchar(6) NOT NULL,
	PRIMARY KEY (Id)
);

CREATE Table Ticket_type (
	id int,
	name varchar(255),
	cost int,
	PRIMARY KEY(id)
);

Create table Vehicle (
	id varchar(255),
	parking_area_id int,
	primary key(id)
);

create table Employee (
	id varchar(6),
	first_name varchar(255),
	last_name varchar(255),
	dob date,
	phone_num varchar(255),
	address varchar(255),
	username varchar(255) unique,
	user_role varchar(6),
	user_password varchar(255),
	Primary key (id)
);

alter table Vehicle
add foreign key(parking_area_id) references PARKING_AREA(id);

alter table Ticket
add foreign key(area_id) references PARKING_AREA(Id),
add foreign key(vehicle_id) references Vehicle(Id),
add foreign key(ticket_type_id) references Ticket_type(Id),
add foreign key(emp_id) references Employee(Id);




